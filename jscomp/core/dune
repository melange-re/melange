(library
 (name core)
 (wrapped false)
 (flags
  (:standard -w -9-30 -open Melange_compiler_libs))
 (preprocess
  (action
   (run cppo %{env:CPPO_FLAGS=} -D BS_BROWSER %{input-file})))
 (modules_without_implementation lam_pass_unused_params lam_runtime)
 (libraries
  ext
  common
  ast_derive
  melange-compiler-libs
  melange.ppxlib-ast
  melange.ppx-lib
  ppxlib.ast))

(rule
 (targets js_record_iter.ml)
 (mode fallback)
 (deps
  j.ml
  (source_tree ../../ocaml-tree))
 (action
  (run
   node
   --no-experimental-fetch
   ../../ocaml-tree/wasm.js
   -record-iter
   -i
   %{deps}
   -o
   %{targets})))

