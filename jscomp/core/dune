(rule
 (targets js_record_iter.ml)
 (mode fallback)
 (deps
  j.ml
  (source_tree ../../ocaml-tree))
 (action
  (run
   node
   --no-experimental-fetch
   ../../ocaml-tree/wasm.js
   -record-iter
   -i
   %{deps}
   -o
   %{targets})))

