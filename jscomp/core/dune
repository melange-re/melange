(library
 (name core)
 (wrapped false)
 (flags
  (:standard -open Melange_compiler_libs))
 (libraries ext common melange_compiler_libs ppxlib.ast))

(rule
 (targets js_pass_debug.ml)
 (deps js_pass_debug.cppo.ml)
 (action
  (run cppo %{env:CPPO_FLAGS=} %{deps} -o %{targets})))

