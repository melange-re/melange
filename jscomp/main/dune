(executable
 (public_name melc)
 (package melange)
 (modes byte_complete native)
 (flags :standard -open Melange_compiler_libs)
 (libraries
  js_parser
  ext
  common
  melange.ppx-lib
  melange-compiler-libs
  core
  cmdliner)
 (modules melc melc_cli)
 (preprocessor_deps ../../package.json ../../bsconfig.json)
 (preprocess
  (action
   (run cppo %{env:CPPO_FLAGS=} %{input-file}))))

