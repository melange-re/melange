(install
 (section bin)
 (files bsb_helper.exe))

(executable
 (name bsc)
 (public_name bsc.exe)
 (modes native)
 (flags
  (:standard -w -9))
 (libraries
  js_parser
  bs_hash_stubs
  ext
  common
  depends
  super_errors
  outcome_printer
  core
  napkin
  reason)
 (modules_without_implementation jscmj_main)
 (modules bsc jscmj_main))

(install
  (files (bsc.exe as bsc))
  (section bin))

(rule
 (target bsc.ml)
 (deps
  (:input js_main.ml)
  ../../package.json
  ../../bsconfig.json)
 (action
  (progn
   (system "mkdir -p %{workspace_root}/lib/es6 %{workspace_root}/lib/js")
   (run cppo %{env:CPPO_FLAGS=} %{input} -o %{target}))))

