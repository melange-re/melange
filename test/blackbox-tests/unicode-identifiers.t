Add `@mel.as` string

  $ cat > x.ml <<EOF
  > type saison = Hiver | Été [@mel.as "Été"] | Printemps | Automne
  > let x = Été
  > EOF

  $ melc x.ml
  // Generated by Melange
  'use strict';
  
  
  const x = /* Été */ "\xc3\x89t\xc3\xa9";
  
  module.exports = {
    x,
  }
  /* No side effect */

  $ cat > x.ml <<EOF
  > type saison = Hiver | Été [@mel.as "Été"] | Printemps | Automne
  > let x = Été
  > let to_str = function 
  >   | Hiver -> "hiver"
  >   | Été -> {js|été|js}
  >   | Printemps -> "printemps"
  >   | Automne -> "automne"
  > EOF

  $ melc x.ml
  // Generated by Melange
  'use strict';
  
  
  function to_str(param) {
    switch (param) {
      case /* Hiver */ 0 :
        return "hiver";
      case /* Été */ "\xc3\x89t\xc3\xa9" :
        return "été";
      case /* Printemps */ 2 :
        return "printemps";
      case /* Automne */ 3 :
        return "automne";
    }
  }
  
  const x = /* Été */ "\xc3\x89t\xc3\xa9";
  
  module.exports = {
    x,
    to_str,
  }
  /* No side effect */

