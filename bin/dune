(executable
 (public_name melc)
 (package melange)
 (flags :standard -open Melange_compiler_libs)
 (libraries
  melstd
  melange_compiler_libs
  melangelib
  cmdliner)
 (modules melc melc_cli)
 (preprocess
  (action
   (run cppo "%{env:CPPO_FLAGS=}" -V OCAML:%{ocaml_version} %{input-file}))))

